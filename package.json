{
  "name": "@chiffre/api-client",
  "version": "0.0.0-semantically-released",
  "description": "Chiffre.io API client",
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "author": {
    "name": "Fran√ßois Best",
    "email": "francois.best@chiffre.io",
    "url": "https://chiffre.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chiffre-io/api-client"
  },
  "keywords": [
    "chiffre",
    "api",
    "client"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --testPathIgnorePatterns=e2e --colors",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "e2e:setup": "./scripts/e2e-start.sh",
    "e2e:teardown": "./scripts/e2e-stop.sh",
    "e2e:run": "jest e2e --runInBand --coverage --colors",
    "e2e:test": "run-s e2e:setup e2e:run e2e:teardown",
    "ci": "run-s build e2e:test"
  },
  "dependencies": {
    "@47ng/cloak": "^0.15.1",
    "@chiffre/api": "^1.5.0",
    "@chiffre/crypto": "^1.0.0",
    "@chiffre/crypto-box": "^1.0.1",
    "axios": "^0.19.2",
    "session-keystore": "^0.6.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.1",
    "commitlint": "^8.3.5",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "jest-extended": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "otplib": "^12.0.1",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
